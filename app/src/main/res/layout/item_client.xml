<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardBackgroundColor="@color/colore_item_list"
    card_view:cardCornerRadius="@dimen/margin_standar"
    card_view:cardElevation="8dp"
    android:id="@+id/item_client"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_user"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:foreground="@drawable/icon_client" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_standar">
                <TextView
                    android:id="@+id/client_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_text"
                    android:layout_margin="@dimen/margin_too_small"
                    android:text="الإسم غيْر وارِد" />

                <TextView
                    android:id="@+id/phone_client"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_text_small"
                    android:alpha="0.9"
                    android:layout_margin="@dimen/margin_too_small"
                    android:text="" />

                <TextView
                    android:id="@+id/date_client"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.8"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end">
                        <TextView
                            android:id="@+id/somme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="end"
                            android:text=""
                            android:textSize="@dimen/size_text" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

